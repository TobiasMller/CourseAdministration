<Window x:Class="CourseWPF.Windows.CreateStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWPF.Windows"
        mc:Ignorable="d"
        Title="CreateStudentWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="CreateStudents" Content="Submit" HorizontalAlignment="Left" Margin="121,298,0,0" VerticalAlignment="Top" Height="49" Width="118" Click="CreateStudent_Click"/>
        <TextBox x:Name="StudentName" HorizontalAlignment="Left" Margin="121,108,0,0" TextWrapping="Wrap" Text="Enter name" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="StudentAge" HorizontalAlignment="Left" Margin="123,165,0,0" TextWrapping="Wrap" Text="Enter age" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
