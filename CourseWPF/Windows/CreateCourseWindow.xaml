<Window x:Class="CourseWPF.Windows.CreateCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWPF.Windows"
        mc:Ignorable="d"
        Title="CreateCourseWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="107*"/>
            <RowDefinition Height="110*"/>
        </Grid.RowDefinitions>
        <Button x:Name="generateCourse" Content="Create the course" HorizontalAlignment="Left" Margin="593,91,0,0" VerticalAlignment="Top" Height="49" Width="118" Click="CreateCourse_Click" Grid.Row="1"/>
        <ListBox x:Name="ChooseStudentList" MouseDoubleClick="ChooseStudentList_MouseDoubleClick" Margin="81,128,581,80" Grid.RowSpan="2"/>
        <TextBox x:Name="CourseName" HorizontalAlignment="Center" Margin="0,23,0,0" TextWrapping="Wrap" Text="Enter name" VerticalAlignment="Top" Width="148" Height="30"/>
        <TextBox x:Name="RoomName" HorizontalAlignment="Center" Margin="0,84,0,0" TextWrapping="Wrap" Text="Enter Room" VerticalAlignment="Top" Width="148" Height="30"/>
        <ListBox x:Name="ChosenStudentsList" Margin="270,128,385,80" Grid.RowSpan="2"/>
    </Grid>
</Window>
